<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:alpha="1.0"
    android:padding="0dp"
    android:id="@+id/widget_container_main">

<!--    Bell Icon-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="36dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/reminder_icon_container">

        <ImageView android:id="@+id/reminder_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_bell"
            android:tint="#CCbcbcbc"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"/>

    </LinearLayout>

<!--    Title and fileName-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:id="@+id/widget_container_title">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/reminder_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:paddingBottom="4dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15dip">
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/file_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="15dip">
        </TextView>

    </LinearLayout>

<!--    Date and Time-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.45"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:gravity="right"
        android:id="@+id/widget_container_date">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:id="@+id/widget_container_days">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Tue"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Wed"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Thu"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Fri"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Sun"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#CCbcbcbc"
                    android:textStyle="bold"
                    android:textSize="15dip">
                </TextView>

            </LinearLayout>

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reminder_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="15dip"/>

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reminder_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/widget_container_days"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="13dip"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>